{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://amprsa.net/credentials/amplience",

	"title": "Amplience credentials",
	"description": "Description",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"client_id": {
			"title": "Client ID",
			"type": "string",
			"minLength": 0,
			"maxLength": 50
		},
		"client_secret": {
			"title": "Client secret",
			"type": "string",
			"minLength": 0,
			"maxLength": 100
		},
		"oauth_url": {
			"title": "OAuth URL",
			"type": "string",
			"default": "https://auth.amplience.net",
			"minLength": 0,
			"maxLength": 50
		}
	},
	"propertyOrder": [
		"client_id",
		"client_secret",
		"oauth_url"
	]
}