{ 
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://amprsa.net/personalized-banner-slot",
  "title": "Personalized Banner Slot",
  "description": "A Slot that can accept multiple banner for different segments",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "segments": {
      "type": "array",
      "title": "Content",

      "items": {
        "type": "object",
        "properties": {
          "segment": {
            "type": "string",
            "title": "Segment",
            "enum": [
              "bargain-hunter",
              "fashionista",
              "home-trendsetter",
              "globe-trotter"
            ]
          },
          "content": {
            "title": "Content",
            "allOf": [
              {
                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
              },
              {
                "properties": {
                  "contentType": {
                    "title": "contentType",
                    "enum": [
                      "https://amprsa.net/simple-banner",
                      "https://amprsa.net/component/advanced-banner",
                      "https://amprsa.net/simple-localized-banner",
                      "https://amprsa.net/banner",
					            "https://amprsa.net/banner-with-poi",
                      "https://amprsa.net/slider",
                      "https://amprsa.net/video"
                    ]
                  }
                }
              }
            ]
          }
        },
        "propertyOrder": [
          "segment",
          "content"
        ]
      }
    }
  }
}