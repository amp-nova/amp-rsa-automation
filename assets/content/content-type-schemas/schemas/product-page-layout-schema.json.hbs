{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{{cms.contentBaseUri}}/product-page-layout.json",

	"title": "Title",
	"description": "Description",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"slots": {
			"type": "object",
			"ui:extension": {
				"name": "dom-extension",
				"params": {
					"height": 600,
					"slots": {
						"main": {
							"allow": "*"
						}
					},
					"components": [{
							"name": "section",
							"title": "Section",
							"icon": "input",
							"group": "Layout",
							"slots": {
								"title": {
									"allow": "*",
									"title": "Header"
								},
								"children": {
									"allow": "*",
									"title": "Body"
								}
							},
							"properties": {
								"variant": {
									"type": "string",
									"title": "Variant",
									"enum": [
										"default",
										"contained"
									]
								},
								"title": {
									"type": "string",
									"title": "Title"
								}
							}
						},
						{
							"name": "grid",
							"title": "Responsive Grid",
							"icon": "table_chart",
							"group": "Layout",
							"slots": {
								"children": {
									"allow": "*"
								}
							},
							"properties": {
								"type": {
									"type": "string",
									"title": "Type",
									"enum": [
										"container",
										"item"
									]
								},
								"direction": {
									"type": "string",
									"title": "Direction",
									"enum": [
										"row",
										"column"
									]
								},
								"justify": {
									"type": "string",
									"title": "Justify",
									"enum": [
										"flex-start",
										"center",
										"flex-end",
										"space-between",
										"space-around",
										"space-evenly"
									]
								},
								"alignItems": {
									"type": "string",
									"title": "Align Items",
									"enum": [
										"flex-start",
										"center",
										"flex-end",
										"stretch",
										"baseline"
									]
								},
								"spacing": {
									"type": "string",
									"title": "Spacing"
								},
								"breakpoints": {
									"type": "object",
									"properties": {
										"xs": {
											"type": "string",
											"title": "Extra Small"
										},
										"sm": {
											"type": "string",
											"title": "Small"
										},
										"md": {
											"type": "string",
											"title": "Medium"
										},
										"lg": {
											"type": "string",
											"title": "Large"
										},
										"xl": {
											"type": "string",
											"title": "Extra Large"
										}
									}
								}
							}
						},
						{
							"name": "text",
							"title": "Simple Text",
							"icon": "notes",
							"group": "Text",
							"preview": {
								"text": "/text"
							},
							"slots": {
							},
							"properties": {
								"text": {
									"type": "string"
								}
							}
						},
						{
							"name": "typography",
							"title": "Styled Text",
							"icon": "text_format",
							"group": "Text",
							"preview": {
								"text": "/text"
							},
							"slots": {
								"children": {
									"allow": "*"
								}
							},
							"properties": {
								"variant": {
									"type": "string",
									"title": "Variant",
									"enum": [
										"h1", "h2", "h3", "h4", "h5", "h6", "body1", "body2"
									]
								}
							}
						},
						{
							"name": "accordion",
							"title": "Accordion",
							"icon": "expand",
							"group": "Interface",
							"preview": {
								"text": "/title"
							},
							"slots": {
								"children": {
									"allow": "*"
								}
							},
							"properties": {
								"title": {
									"type": "string",
									"title": "Title"
								}
							}
						},
						{
							"name": "product_hero",
							"title": "Product Hero",
							"icon": "sell",
							"group": "Commerce",
							"slots": {},
							"properties": {		
							}
						},
						{
							"name": "product_attribute",
							"title": "Product Attribute",
							"icon": "sell",
							"group": "Commerce",
							"slots": {},
							"properties": {
								"variant": {
									"type": "string",
									"title": "Variant",
									"enum": [
										"id", "name", "longDescription", "articleNumberMax", "color", "designer", "size", "sku", "header", "text"
									]
								}
							}
						},
						{
							"name": "product_image_viewer",
							"title": "Product Media Viewer",
							"icon": "sell",
							"group": "Commerce",
							"slots": {},
							"properties": {
								"variant": {
									"type": "string",
									"title": "Variant",
									"enum": [
										"portrait",
										"landscape"
									]
								},
								"numItems": {
									"type": "string",
									"title": "Number of items visible"
								}
							}
						},
						{
							"name": "product_size",
							"title": "Product Size",
							"icon": "sell",
							"group": "Commerce",
							"slots": {},
							"properties": {		
							}
						},
						{
							"name": "product_color",
							"title": "Product Color",
							"icon": "sell",
							"group": "Commerce",
							"slots": {},
							"properties": {		
							}
						},
						{
							"name": "product_atb",
							"title": "Add To Basket Button",
							"icon": "sell",
							"group": "Commerce",
							"slots": {},
							"properties": {		
							}
						},
						{
							"name": "product_rule_based_content",
							"title": "Dynamic Product Content",
							"icon": "rule",
							"group": "Content",
							"slots": {},
							"properties": {		
							}
						},
						{
							"name": "product_rich_text",
							"title": "Product Rich Text",
							"icon": "sell",
							"group": "Commerce",
							"slots": {},
							"properties": {
								"variant": {
									"type": "string",
									"title": "Variant",
									"enum": [
										"text"
									]
								}
							}
						},
						{
							"name": "content_block",
							"title": "Content Block",
							"icon": "view_in_ar",
							"group": "Content",
							"slots": {},
							"properties": {
								"content": {
									"title": "Content Block",
									"allOf": [
										{ "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
										{
											"properties": {
												"contentType": {
													"enum": [
														"{{cms.contentBaseUri}}/simple-banner.json",
														"{{cms.contentBaseUri}}/simple-localized-banner.json",
														"{{cms.contentBaseUri}}/banner.json",
														"{{cms.contentBaseUri}}/card.json",
														"{{cms.contentBaseUri}}/cardList.json",
														"{{cms.contentBaseUri}}/curated-product-grid.json",
														"{{cms.contentBaseUri}}/customRichText.json",
														"{{cms.contentBaseUri}}/product-grid.json",
														"{{cms.contentBaseUri}}/image.json",
														"{{cms.contentBaseUri}}/promo.json",
														"{{cms.contentBaseUri}}/promoList.json",
														"{{cms.contentBaseUri}}/slider.json",
														"{{cms.contentBaseUri}}/splitBlock.json",
														"{{cms.contentBaseUri}}/text.json",
														"{{cms.contentBaseUri}}/video.json",
														"{{cms.contentBaseUri}}/container.json",
														"{{cms.contentBaseUri}}/component-product-carousel.json",
														"{{cms.contentBaseUri}}/component-teaser.json",
														"{{cms.contentBaseUri}}/component-personify-targeted-content.json",
														"{{cms.contentBaseUri}}/component-dy-ab-content.json",
														"{{cms.contentBaseUri}}/component-dynamic-blog-list.json",
														"{{cms.contentBaseUri}}/component-productlistsearch.json",
														"{{cms.contentBaseUri}}/component-simple-banner-external.json",
														"{{cms.contentBaseUri}}/theme-wrapper.json",
														"{{cms.contentBaseUri}}/component-advanced-banner.json",
														"{{cms.contentBaseUri}}/simple-image-banner.json"
													]
												}
											}
										}
									]
								}

							}
						}
					]
				}
			}
		}
	},
