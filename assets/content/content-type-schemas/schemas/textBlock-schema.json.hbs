{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{{cms.contentBaseUri}}/textBlock.json",
  "title": "Text Block",
  "description": "A single text block",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "icon": {
      "type": "object",
      "title": "Icon",
      "description": "The icon for the text block",
      "anyOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
        }
      ]
    },
    "backgroundColor": {
      "type": "string",
	    "format": "color",
      "title": "Background Colour",
      "description": "Background Colour of the text block",
      "validation": "Add a Hex value"
    },
    "title": {
      "type": "string",
      "title": "Title",
      "description": "Title of the text block",
      "validation": "Please enter less than 50 characters",
      "minLength": 0,
      "maxLength": 50
    },
    "titleColor": {
      "type": "string",
      "format": "color",
      "title": "Title Colour",
      "description": "Title Colour of the text block",
      "validation": "Add a Hex value"
    },
    "content": {
      "type": "string",
      "title": "Content",
      "description": "Content of the text block",
      "format": "markdown"
    },
    "contentColor": {
      "type": "string",
      "format": "color",
      "title": "Content Colour",
      "description": "Content Colour of the text block",
      "validation": "Add a Hex value"
    },
    "link": {
      "type": "object",
      "title": "Link",
      "description": "Links for the text block",
      "allOf": [
        {
          "$ref": "{{cms.contentBaseUri}}/link.json"
        }
      ]
    }
  },
  "propertyOrder": [
    "icon",
    "backgroundColor",
    "title",
    "titleColor",
    "content",
    "contentColor",
    "link"
  ]
}