{ 
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://amprsa.net/blog",
  "title": "Blog",
  "description": "A Blog Post",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "snippet": {
      "type": "object",
      "title": "Blog Snippet",
      "description": "Blog Snippet",
      "allOf": [
        {
          "$ref": "https://amprsa.net/blogSnippet"
        }
      ]
    },
    "content": {
      "type": "object",
      "title": "Blog Content",
      "description": "The main content for the blog",
      "allOf": [
        {
          "$ref": "https://amprsa.net/customRichText"
        }
      ]
    },
    "contentTypes": {
      "type": "array",
      "title": "Content Type",
      "description": "Select and order content to display in the page",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "https://amprsa.net/simple-banner",
                  "https://amprsa.net/banner",
                  "https://amprsa.net/banner-with-poi",
                  "https://amprsa.net/card",
                  "https://amprsa.net/cardList",
                  "https://amprsa.net/curated-product-grid",
                  "https://amprsa.net/customRichText",
                  "https://amprsa.net/productGrid",
                  "https://amprsa.net/externalBlock",
                  "https://amprsa.net/image",
                  "https://amprsa.net/product",
                  "https://amprsa.net/promo",
                  "https://amprsa.net/promoList",
                  "https://amprsa.net/shoppableVideo",
                  "https://amprsa.net/slider",
                  "https://amprsa.net/splitBlock",
                  "https://amprsa.net/text",
                  "https://amprsa.net/video",
                  "https://amprsa.net/component/product-carousel",
                  "https://amprsa.net/component/teaser",
                  "https://amprsa.net/component/dynamic-blog-list"
                ]
              }
            }
          }
        ]
      }
    },
    "theme": {
          "title": "Theme",
					"type": "object",
					"properties": {
						"values": {
							"type": "array",
              "maxItems": 1,
							"ui:extension": {
								"name": "hierarchy-picker",
								"params": {
									"nodeId": "{{cms.hierarchies.configuration}}",
                  "type": "chip"
								}
							},
                            
							"items": {
								"allOf": [{
										"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-reference"
									},
									{
										"properties": {
											"contentType": {
												"enum": [
													"https://amprsa.net/config/theme"
												]
											}
										}
									}
								]
							}
						}
					}
        }
  }
}