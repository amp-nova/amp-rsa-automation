{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{{cms.contentBaseUri}}/textBlockList.json",
	"title": "Text Block List",
	"description": "A list of text blocks to display",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"textBlocks": {
			"type": "array",
			"title": "Text Blocks",
			"description": "A list of text blocks to display",
			"items": {
				"allOf": [
					{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"title": "Text Block",
								"enum": [
									"{{cms.contentBaseUri}}/textBlock.json"
								]
							}
						}
					}
				]
			},
			"minItems": 1,
			"maxItems": 4
		}
	}
}