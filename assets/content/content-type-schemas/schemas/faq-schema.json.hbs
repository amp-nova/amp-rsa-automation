{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{{cms.contentBaseUri }}/faq.json",
	"title": "FAQ",
	"description": "FAQ",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"header": {
			"title": "header",
			"description": "FAQ Header",
			"type": "string",
			"minLength": 0,
			"maxLength": 100
		},
		"items": {
			"title": "FAQ",
			"description": "description",
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
				"type": "object",
				"properties": {
					"question": {
						"title": "question",
						"description": "description",
						"type": "string",
						"minLength": 0,
						"maxLength": 100
					},
					"answer": {
						"title": "answer",
						"description": "description",
						"type": "string",
						"format": "markdown"
					}
				}
			}
		}
	},
	"propertyOrder": [
		"header",
		"items"
	]
}