							"group": "Layout",
							"slots": {
								"children": {
									"allow": "*"
								}
							},
							"properties": {
								"type": {
									"type": "string",
									"title": "Type",
									"enum": [
										"container",
										"item"
									]
								},
								"direction": {
									"type": "string",
									"title": "Direction",
									"enum": [
										"row",
										"column"
									]
								},
								"justify": {
									"type": "string",
									"title": "Justify",
									"enum": [
										"flex-start",
										"center",
										"flex-end",
										"space-between",
										"space-around",
										"space-evenly"
									]
								},
								"alignItems": {
									"type": "string",
									"title": "Align Items",
									"enum": [
										"flex-start",
										"center",
										"flex-end",
										"stretch",
										"baseline"
									]
								},
								"spacing": {
									"type": "string",
									"title": "Spacing"
								},
								"breakpoints": {
									"type": "object",
									"properties": {
										"xs": {
											"type": "string",
											"title": "Extra Small"
										},
										"sm": {
											"type": "string",
											"title": "Small"
										},
										"md": {
											"type": "string",
											"title": "Medium"
										},
										"lg": {
											"type": "string",
											"title": "Large"
										},
										"xl": {
											"type": "string",
											"title": "Extra Large"
										}
									}
								}
							}
						},
						{
							"name": "text",
							"title": "Simple Text",
							"icon": "notes",
							"group": "Text",
							"preview": {
								"text": "/text"
							},
							"slots": {
							},
							"properties": {
								"text": {
									"type": "string"
								}
							}
						},
						{
							"name": "typography",
							"title": "Styled Text",
							"icon": "text_format",
							"group": "Text",
							"preview": {
								"text": "/text"
							},
							"slots": {
								"children": {
									"allow": "*"
								}
							},
							"properties": {
								"variant": {
									"type": "string",
									"title": "Variant",
									"enum": [
										"h1", "h2", "h3", "h4", "h5", "h6", "body1", "body2"
									]
								}
							}
						},
						{
							"name": "accordion",
							"title": "Accordion",
							"icon": "expand",
							"group": "Interface",
							"preview": {
								"text": "/title"
							},
							"slots": {
								"children": {
									"allow": "*"
								}
							},
							"properties": {
								"title": {
									"type": "string",
									"title": "Title"
								}
							}
