							"name": "content_block",
							"title": "Content Block",
							"icon": "view_in_ar",
							"group": "Content",
							"slots": {},
							"properties": {
								"content": {
									"title": "Content Block",
									"allOf": [
										{ "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
