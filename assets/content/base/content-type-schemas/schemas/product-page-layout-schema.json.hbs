						"main": {
							"allow": "*"
						}
					},
					"components": [{
							"name": "section",
							"title": "Section",
							"icon": "input",
							"group": "Layout",
							"slots": {
								"title": {
									"allow": "*",
									"title": "Header"
								},
								"children": {
									"allow": "*",
									"title": "Body"
								}
							},
							"properties": {
								"variant": {
									"type": "string",
									"title": "Variant",
									"enum": [
										"default",
										"contained"
									]
								},
								"title": {
									"type": "string",
									"title": "Title"
								}
