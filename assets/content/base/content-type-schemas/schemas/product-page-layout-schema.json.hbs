							"icon": "sell",
							"group": "Commerce",
							"slots": {},
							"properties": {
								"variant": {
									"type": "string",
									"title": "Variant",
									"enum": [
										"portrait",
										"landscape"
									]
								},
								"numItems": {
									"type": "string",
									"title": "Number of items visible"
								}
							}
						},
						{
							"name": "product_size",
							"title": "Product Size",
