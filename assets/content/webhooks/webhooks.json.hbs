[
  {
    "label": "amp-rsa-demo-snapshot-published-{{cms.hub.name}}",
    "events": [
      "dynamic-content.snapshot.published"
    ],
    "active": true,
    "handlers": [
      "{{serverless.services.dcContentDeliveryPoc.endpoint}}/webhooks/snapshot-published"
    ],
    "notifications": [],
    "headers": [],
    "filters": [],
    "method": "POST"
  },
  {
    "label": "amp-rsa-demo-item-created-{{cms.hub.name}}",
    "events": [
      "dynamic-content.content-item.created",
      "dynamic-content.content-item.updated"
    ],
    "active": true,
    "handlers": [
      "{{serverless.services.dcContentDeliveryPoc.endpoint}}/webhooks/item-saved"
    ],
    "notifications": [],
    "headers": [],
    "filters": [],
    "method": "POST"
  },
  {
    "label": "translation-integration-{{cms.hub.name}}",
    "events": [
      "dynamic-content.content-item.workflow.updated"
    ],
    "active": true,
    "handlers": [
      "{{serverless.services.willowDemoServices.endpoint}}/translation/translate-content-item"
    ],
    "notifications": [],
    "headers": [],
    "filters": [
      {
        "type": "equal",
        "arguments": [
          {
            "jsonPath": "$.payload.workflow.state"
          },
          {
            "value": "{{cms.workflowStates.sentForTranslation}}"
          }
        ]
      }
    ],
    "method": "POST"
  }
]