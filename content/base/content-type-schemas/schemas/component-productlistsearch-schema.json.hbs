{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://amprsa.net/component/productlistsearch",

	"title": "Product List Search",
	"description": "Description",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"products": {
			"title": "Product Selector",
			"description": "Algolia Product Selector",
			"type": "object",
			"filterFacets": {
				"type": "array"
			},
			"queryText": {
				"type": "string"
			},
			"ui:extension": {
				"url": "https://presalesadisws.s3.eu-west-1.amazonaws.com/ui-extensions/algolia-product-list-search/index.html",
				"height": 200,
				"params": {
					"indexName": "{{algolia.indexes.productListSearch.prod}}",
					"appId": "{{algolia.credentials.tacit.appId}}",
					"apiKey": "{{algolia.credentials.tacit.apiKey}}",
					"facets": [
						{
							"name": "Price",
							"attribute": "variations.price",
							"component": "price",
							"searchBox": "false"
						},
						{
							"name": "Category",
							"attribute": "product.categories.slug.en",
							"component": "terms",
							"searchBox": true
						},
						{
							"name": "Designer",
							"attribute": "attributes.designer",
							"component": "terms",
							"searchBox": true
						},
						{
							"name": "Color",
							"attribute": "attributes.colorFreeDefinition",
							"component": "terms",
							"searchBox": true
						},
						{
							"name": "Size",
							"attribute": "variations.attributes.size",
							"component": "terms",
							"searchBox": "true"
						}

					],
					"locale": "en",
					"currency": "USD"
				}
			}
		},
		"header": {
			"title": "Header",
			"description": "Header for this product list",
			"allOf": [
				{ "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
			]
		}
		
	},
	"propertyOrder": ["header","headerNew", "products" ]
}