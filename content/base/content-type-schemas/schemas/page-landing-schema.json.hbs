{ 
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://amprsa.net/page/landing",

	"title": "Landing Page",
	"description": "",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
    ],
    
    "trait:hierarchy": {
		"childContentTypes": [
            "https://amprsa.net/page/group"
        ]
    },

    "trait:sortable": {
        "sortBy": [
            { "key": "default", "paths": ["/menu/priority"] }
        ]
    },
	
	"type": "object",
	"properties": {
        "_meta": {
            "title": "",
            "properties": {
                "deliveryKey": {
                    "title": "Slug",
                    "type": "string",
                    "pattern": "page\/.*"
                }
            }
        },
        "title": {
            "title": "Title",
            "description": "Title for the page",
            "allOf": [
                { "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
            ]
        },

        "menu": { "$ref": "https://amprsa.net/lib/menu#/definitions/menuItemConfig" },
        "components": {
            "title": "Components",
            "type": "array",
            "items": {
                "title": "Component",
                "allOf": [
                    { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
                    {
                        "properties": {
                            "contentType": { "$ref": "https://amprsa.net/lib/components#/definitions/anyComponent" }
                        }
                    }
                ]
            }
        },
        "slots": {
            "title": "Slots",
            "type": "array",
            "items": {
                "title": "Slots",
                "allOf": [
                    { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-reference" },
                    {
                        "properties": {
                            "contentType": { "$ref": "https://amprsa.net/lib/components#/definitions/anySlot" }
                        }
                    }
                ]
            }
        }        
    },

    "required": [
        "title"
    ],
    
    "definitions": {
    }
}