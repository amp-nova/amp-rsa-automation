{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://amprsa.net/credentials/bigcommerce",

	"title": "BigCommerce credentials",
	"description": "BigCommerce credentials",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"apiUrl": {
			"title": "API URL",
			"type": "string",
			"minLength": 0,
			"maxLength": 100
		},
		"apiToken": {
			"title": "API Token",
			"type": "string",
			"minLength": 0,
			"maxLength": 100
		},
		"storeHash": {
			"title": "Store hash",
			"type": "string",
			"minLength": 0,
			"maxLength": 50
		}
	},
	"propertyOrder": [
		"apiUrl",
		"apiToken",
		"storeHash"
	]
}